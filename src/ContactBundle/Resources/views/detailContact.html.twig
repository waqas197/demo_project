{% extends "base.html.twig" %}
{% block title %}
    Detail {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-1">&nbsp;</div>

            <div class="col-sm-10 text-left">
                <h1>Contact Detail</h1>
                <hr>
                    <div class="row">
                        <div class="col-md-3">
                            {% if (contact.picture) %}
                            <img id="img-{{ contact.id }}" src="{{ asset('uploads/pictures/' ~ contact.picture) }}" width="300"/>
                            <br>
                            <a href="#" id="img-remove-link-{{ contact.id }}" onclick="removeImage({{ contact.id }})" >Remove Picture</a>
                            {% else %}
                                <img src="{{ asset('uploads/pictures/no-image.jpg') }}" width="300"/>
                            {% endif %}
                        </div>
                        <div class="col-md-3">
                            <table class="table table-sm">
                                <tr>
                                    <th scope="row">First Name: </th>
                                    <td>{{ contact.firstName }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Last Name: </th>
                                    <td>{{ contact.lastName }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Street: </th>
                                    <td>{{ contact.street }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Zip: </th>
                                    <td>{{ contact.zip }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">City: </th>
                                    <td>{{ contact.city }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Country: </th>
                                    <td>{{ contact.country }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Phone Number: </th>
                                    <td>{{ contact.phoneNumber }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Date of Birth: </th>
                                    <td>{{ contact.dateOfBirth|date("d.m.Y") }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Email: </th>
                                    <td>{{ contact.emailAddress }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Action: </th>
                                    <td>
                                        <a class='btn btn-success' href="{{ path('edit_contact', {id: contact.id}) }}">Edit</a>
                                        <a class='delete btn btn-danger' href="#" onclick="deleteContact({{ contact.id }}, '{{ absolute_url(path('search_contact')) }}')">Delete</a>
                                    </td>
                                </tr>

                            </table>
                        </div>


                    </div>
            </div>

            <div class="col-sm-1">&nbsp;</div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            searchContact();
        });
    </script>

{% endblock %}

